<h1 class="mt-5 mb-5 fs-2 fw-bold ms-4">Check out our events:</h1>
  <div class="container">
    <div class="row">
      <div class="col-md-12  d-flex justify-conten-center">

            <% @events.each do |event|%>
              <div class="card mb-5 mx-3" style="width: 24rem;">
                <div class="card-body">
                  <img src="https://images.unsplash.com/photo-1545622783-b3e021430fee?q=80&w=868&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="christmas" class="card-img-top mb-2" alt="event image">
                  <div class="card-title fs-6 pb-2" style="height: 5rem"><%= event.title %></div>
                    <div class="list-group-item">
                      <p>From <%= event.start_at.strftime('%m/%d/%Y')%> to <%= event.end_at.strftime('%m/%d/%Y') %></p>
                      <p><%= event.location %></p>
                    </div>
                  <a href="#" class="card-link">See More</a>
                </div>
              </div>
            <% end %>

      </div>
    </div>
  </div>
